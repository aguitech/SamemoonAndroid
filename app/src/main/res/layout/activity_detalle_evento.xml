                android:gravity="center"
                android:textColor="@color/blanco"
                android:textSize="15dp"
                android:paddingLeft="10dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.10"
            android:gravity="center"
            android:layout_height="match_parent">
        </LinearLayout>
    </LinearLayout>
    <ScrollView
