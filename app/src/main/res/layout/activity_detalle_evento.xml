<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="@color/blanco"
    tools:context="com.samemoon.app.Detalle_evento">
    <LinearLayout
        android:background="@color/blanco"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:gravity="center"
        android:id="@+id/header"
        android:layout_height="60dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:gravity="center"
            android:onClick="goMenu">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="0.60"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/titulo_samemoon"
                android:layout_width="100dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="0.20"
            android:onClick="goNotificaciones"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/campanita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnNotificaciones" />
            <!--
            <TextView
                android:gravity="center"
                android:id="@+id/numeroNotificaciones"
                android:text=""
                android:visibility="gone"
                android:background="@drawable/fondo_notificacion"
                android:textColor="@color/blanco"
                android:textSize="@dimen/texto_notificaciones"
                android:layout_marginLeft="@dimen/notificaciones_margin_left"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/notificaciones_margin_top"
                android:layout_height="wrap_content" />
            -->
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="1"
        android:background="@color/morado"
        android:id="@+id/header_verde"
        android:layout_height="40dp"
        android:layout_below="@+id/header">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.10"
            android:gravity="center"
            android:layout_height="match_parent"></LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.80"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="match_parent">
            <!--
            <ImageView
                android:src="@drawable/anuncios"
                android:layout_width="30dp"
                android:layout_height="wrap_content" />
            -->
            <TextView
                android:layout_width="wrap_content"
                android:text="Detalle evento"
                android:gravity="center"
                android:textColor="@color/blanco"
                android:textSize="15dp"
                android:paddingLeft="10dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.10"
            android:gravity="center"
            android:layout_height="match_parent">
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/footer"
        android:layout_below="@+id/header_verde">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:clipToPadding="false"
            android:paddingTop="0dp">
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="0dp">
                    <TextView
                        android:id="@+id/txtTituloEvento"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Titulo de evento"/>


                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:background="@color/blanco"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:gravity="center"
                android:id="@+id/header"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.20"
                    android:gravity="center"
                    android:onClick="goMenu">


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:onClick="goMenu">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtFechaEvento"
                        android:gravity="center"
                        android:text="Fecha" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:onClick="goMenu">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtHoraEvento"
                        android:background="@drawable/border_hora_radius"
                        android:gravity="center"
                        android:text="Hora"
                        android:textColor="@color/blanco"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.20"
                    android:gravity="center"
                    android:onClick="goMenu">


                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="0dp"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.20"
                    android:layout_marginLeft="0dp">

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.60"

                    android:layout_marginLeft="0dp">
                    <TextView
                        android:id="@+id/txtDescripcionEvento"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."/>


                </LinearLayout>


            </LinearLayout>

            <!--
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginTop="15dp"
                android:clipToPadding="false"
                android:gravity="center"
                android:paddingTop="0dp">

                <ListView
                    android:id="@+id/list_pagos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </ListView>

            </LinearLayout>
            -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginTop="15dp"
                android:clipToPadding="false"
                android:gravity="center"
                android:paddingTop="0dp">

                <Button
                    android:layout_width="wrap_content"
                    android:text="Regresar"
                    android:textColor="@color/gris_fuerte"
                    android:textAllCaps="false"
                    android:onClick="goBack"
                    android:textSize="12dp"
                    android:background="@drawable/border_verde_radius"
                    android:layout_height="30dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginTop="15dp"
                android:clipToPadding="false"
                android:gravity="center"
                android:paddingTop="0dp">

                <Button
                    android:layout_width="wrap_content"
                    android:text="Tomar foto"
                    android:textColor="@color/gris_fuerte"
                    android:textAllCaps="false"
                    android:id="@+id/btnCapture"
                    android:textSize="12dp"
                    android:background="@drawable/border_verde_radius"
                    android:layout_height="30dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginTop="15dp"
                android:clipToPadding="false"
                android:gravity="center"
                android:paddingTop="0dp">

                <Button
                    android:layout_width="wrap_content"
                    android:text="Sincronizar"
                    android:textColor="@color/gris_fuerte"
                    android:textAllCaps="false"
                    android:onClick="guardarFotoServidor"
                    android:id="@+id/btnGuardarFoto"
                    android:textSize="12dp"
                    android:background="@drawable/border_verde_radius"
                    android:layout_height="30dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginTop="15dp"
                android:clipToPadding="false"
                android:gravity="center"
                android:paddingTop="0dp">
                <!-- android:onClick="cambiarFoto" -->
                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/imgFotoEvento"
                    android:onClick="cambiarFoto"
                    android:src="@drawable/btn_facebook"
                    android:layout_height="100dp" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/fondo_input"
        android:paddingTop="10dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/footer"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_weight=".25"
                android:layout_height="40dp"
                android:onClick="goClientes"
                android:layout_gravity="center_vertical"
                android:src="@drawable/clientes"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_weight=".25"
                android:layout_height="40dp"
                android:onClick="goMascotas"
                android:layout_gravity="center_vertical"
                android:src="@drawable/mascotass"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_weight=".25"
                android:layout_height="40dp"
                android:onClick="goServicio"
                android:layout_gravity="center_vertical"
                android:src="@drawable/servicios_dos"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_weight=".25"
                android:onClick="goTienda"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/tienda"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
