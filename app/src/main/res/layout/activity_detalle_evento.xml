    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="@color/blanco"
    tools:context="com.samemoon.app.Detalle_evento">
    <LinearLayout
        android:background="@color/blanco"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:gravity="center"
        android:id="@+id/header"
        android:layout_height="60dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:gravity="center"
            android:onClick="goMenu">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="0.60"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/titulo_samemoon"
                android:layout_width="100dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="0.20"
            android:onClick="goNotificaciones"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/campanita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnNotificaciones" />
            <!--
            <TextView
